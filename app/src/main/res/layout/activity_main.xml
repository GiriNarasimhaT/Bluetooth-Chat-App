<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cce5fc"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/list_conversation_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay"
        android:layout_marginBottom="60dp"
        android:padding="10dp"
        android:divider="#00000000"
        android:dividerHeight="8dip"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"/>

    <ListView
        android:id="@+id/list_conversation_w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:scrollbarStyle="outsideOverlay"
        android:padding="10dp"
        android:divider="#00000000"
        android:dividerHeight="8dip"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:scaleX="-1"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#4596e6">

        <EditText
            android:id="@+id/ed_enter_message"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/btn_send_msg"
            android:background="@drawable/rounded_edittext"
            android:hint=" Type a Message..." />

        <Button
            android:id="@+id/btn_send_msg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="5dp"
            android:text="SEND"
            android:textStyle="bold"
            app:backgroundTint="#006BD5" />
    </RelativeLayout>
</RelativeLayout>